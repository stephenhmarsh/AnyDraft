<body>

	<div class="container">

	<h1 class="logo-link">
		<a href="/"><span class="lightpink-logo">A</span><span class="lightgreen-logo">n</span><span class="lightcyan-logo">y</span><span class="underline-logo">Draft</span></a>
	</h1>

	<div class="user-auth-links">
		<% if current_user %>
			<%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
		<% else %>
			<%= link_to("Login", new_user_session_path)%>
		<% end %>
	</div>

	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>

	<%= yield %>
	
	</div> <!-- end container -->
</body>
